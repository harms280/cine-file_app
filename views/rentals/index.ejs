<% include ../partials/header %>

<div class="page-header">
    <h1>My Rentals Collection</h1>
  </div>
  <div class="container">
    <h2>Currently Renting: </h2>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <table class="table table-striped table-bordered table-condensed text-center">
          <thead>
            <th class="text-center">Poster</th>
            <th class="text-center">Title</th>
            <th class="text-center">Year</th>
          </thead>
          <tbody>
            <% rentals.forEach(function(movie) { %>
               <tr>
                <td class="col-md-4 text-center vert-align"><img src="<%=movie.poster %>" alt="movie poster"></td>
                 <td class="col-md-4 vert-align"><h4><a href="movies/<%= movie._id %>"><%= movie.title %></a></h4></td>
                 <td class="col-md-4 vert-align"><h4><%= movie.year %></h4></td>
                 <% if(movie.owner.toString() == user_id ) { %>
                    <td class="vert-align"><a href="/movies/<%= movie._id%>/edit" class="btn btn-warning">Edit</a></td>
                  <td class="vert-align">
                    <form action="/rentals/<%= movie._id %>?_method=DELETE" method="POST">
                      <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                  </td>
                  <% } %>
                 <!-- <td><form action="/countries/<%=movie.id%>?_method=delete" method="POST"><button type="submit" class="btn btn-default btn-sm">Delete</button></form></td> -->
               </tr>
             <% }) %>
          </tbody>
      </table>
      </div>
    </div>
    <div class="row">
      <h2>Rentals Waiting Approval: </h2>
      <div class="container">
        <h2>Currently Renting: </h2>
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <table class="table table-striped table-bordered table-condensed text-center">
              <thead>
                <th class="text-center">Poster</th>
                <th class="text-center">Title</th>
                <th class="text-center">Year</th>
              </thead>
              <tbody>
                <% rentals.forEach(function(movie) { %>
                   <tr>
                    <td class="col-md-4 text-center vert-align"><img src="<%=movie.poster %>" alt="movie poster"></td>
                     <td class="col-md-4 vert-align"><h4><a href="movies/<%= movie._id %>"><%= movie.title %></a></h4></td>
                     <td class="col-md-4 vert-align"><h4><%= movie.year %></h4></td>
                     <% if(movie.owner.toString() == user_id ) { %>
                        <td class="vert-align"><a href="/movies/<%= movie._id%>/edit" class="btn btn-warning">Edit</a></td>
                      <td class="vert-align">
                        <form action="/rentals/<%= movie._id %>?_method=DELETE" method="POST">
                          <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                      </td>
                      <% } %>
                   </tr>
                 <% }) %>
              </tbody>
          </table>
          </div>
        </div>
    </div>
    </div>

<% include ../partials/footer %>