<% include ../partials/header %>
<div class="container-fluid">
  <div class="page-header">
      <h1><%= movie.title %></h1>
  </div>
</div>
<div class="container">
  <div class="jumbotron">
    <form method="POST" action="/movies/<%= movie.id %>?_method=PUT" >
      <div class="form-group">
        <label for="director"> Director: </label>
        <input type="text" id="director" name="movie[director]" class="form-control" value="<%= movie.director %>">
      </div>
      <div class="form-group">
        <label for="year"> Year: </label>
        <input type="text" id="year" name="movie[year]" value="<%= movie.year %>" class="form-control">
      </div>
      <div class="form-group">
        <label for="actors"> Actors: </label>
        <input type="text" id="actors" name="movie[actors]" value="<%= movie.actors %>" class="form-control">
      </div>
      <div class="form-group">
        <label for="plot"> Plot: </label>
        <input type="text" id="plot" name="movie[plot]" value="<%= movie.plot %>" class="form-control">
      </div>
      <!-- <div class="form-group">
        <label for="poster"> Poster: </label>
        <input type="text" id="poster" name="movie[poster]" value="<%= movie.poster %>" class="form-control" placeholder="Enter poster URL">
      </div> -->
      <div class="form-group">
        <label for="format"> Format: </label>
        <label class="checkbox-inline">
        <% if(movie.format.bluRay) { %>
        <input type="checkbox" name="movie[format.bluRay]" id="checkbox1" value="Blu-ray" checked="checked">Blu-ray</label>
        <% } else { %>
        <input type="checkbox" name="movie[format.bluRay]" id="checkbox1" value="Blu-ray">Blu-ray</label>
        <% } %>
        <% if(movie.format.dvd) { %>
        <label class="checkbox-inline"><input type="checkbox" name="movie[format.dvd]" id="checkbox2" value="DVD" checked="checked">DVD</label>
        <% } else { %>
        <label class="checkbox-inline"><input type="checkbox" name="movie[format.dvd]" id="checkbox2" value="DVD">DVD</label>
        <% } %>
        <% if(movie.format.vhs) { %>
        <label class="checkbox-inline"><input type="checkbox" name="movie[format.vhs]" id="checkbox3" value="VHS" checked="checked">VHS</label>
        <% } else { %>
        <label class="checkbox-inline"><input type="checkbox" name="movie[format.vhs]" id="checkbox3" value="VHS">VHS</label>
        <% } %>
        <% if(movie.format.other) { %>
        <label class="checkbox-inline"><input type="checkbox" name="movie[format.other]"id="checkbox4" value="Other" checked="checked">Other</label>
        <% } else { %>
        <label class="checkbox-inline"><input type="checkbox" name="movie[format.other]"id="checkbox4" value="Other">Other</label>
        <% } %>
      </div>
      <!--
      <div class="form-group">
        <label for="watched"> Watched: </label>
        
        <label class="radio-inline">
          <input type="radio" name="movie[watched]" id="inlineRadio2" value="true"> Watched
        </label>
        <label class="radio-inline">
          <input type="radio" name="movie[watched]" id="inlineRadio1" value="false"> Haven't watched
        </label>
      </div>
      -->
      <div class="form-group">
        <label for="poster"> Poster: </label>
        <input type="text" id="poster" name="movie[poster]" value="<%= movie.poster %>" class="form-control" placeholder="Enter poster URL">
      </div>
      <div class="form-group">
        <label for="notes"> Notes: </label>
        <textarea class="form-control" name="movie[notes]" rows="3" placeholder="Enter Notes About Film"><%= movie.notes %></textarea>
      </div>
      <input type="submit" value="Update" class="btn btn-warning">
      <a href="/movies/<%= movie.id %>" class="btn btn-danger pull-right">Cancel</a>
    </form>
  </div>
</div>
<% include ../partials/footer %>